<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/title_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".title.Title">

    <ImageView
        android:id="@+id/title_image"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_marginTop="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_title_title_image"
        android:contentDescription="@string/title_Description" />

    <ImageButton
        android:id="@+id/start_button"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/help_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mode_background"
        app:srcCompat="@drawable/ic_title_button_start"
        android:contentDescription="@string/start_Description" />

    <ImageButton
        android:id="@+id/help_button"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginBottom="130dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_title_button_help"
        android:contentDescription="@string/help_Description" />

    <ImageButton
        android:id="@+id/setting_button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_title_button_setting"
        android:contentDescription="@string/setting_Description" />

    <ImageView
        android:id="@+id/mode_background"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:contentDescription="@string/modeBackground_Description"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_image"
        app:srcCompat="@drawable/ic_title_button_white" />

    <ImageButton
        android:id="@+id/mode_button"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/mode_background"
        app:layout_constraintEnd_toEndOf="@+id/mode_background"
        app:layout_constraintStart_toStartOf="@+id/mode_background"
        app:layout_constraintTop_toTopOf="@+id/mode_background"
        app:srcCompat="@drawable/ic_title_mode_limited"
        android:contentDescription="@string/mode_Description" />

</androidx.constraintlayout.widget.ConstraintLayout>